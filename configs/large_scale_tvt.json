{
    "experiment": {
        "name": "TVT Large Scale",
        "description": "Large scale Train-Validate-Test experiment with validate-based selection"
    },
    "data": {
        "tickers_dir": "history",
        "mode": "portfolio",
        "train_data_start": "2005-01-01",
        "train_backtest_start": "2006-06-25",
        "train_backtest_end": "2015-12-31",
        "validate_data_start": "2015-01-01",
        "validate_backtest_start": "2016-06-01",
        "validate_backtest_end": "2019-12-31",
        "test_data_start": "2020-01-01",
        "test_backtest_start": "2020-06-01",
        "test_backtest_end": "2024-12-31"
    },
    "evolution": {
        "generations": 25,
        "population_size": 1000,
        "initial_depth": 6,
        "maximum_depth": 17,
        "max_processors": 3
    },
    "operation_mode": "serial",
    "initialization": {
        "method": "ramped_half_and_half",
        "parameters": {
            "min_depth": 2,
            "max_depth": 6
        }
    },
    "selection": {
        "method": "tournament",
        "parameters": {
            "tournament_size": 3
        }
    },
    "crossover": {
        "strategy": "one_point_leaf_biased",
        "rate": 0.75,
        "parameters": {
            "terminal_prob": 0.1,
            "max_retries": 10,
            "max_depth": 17
        }
    },
    "mutation": {
        "strategy": "uniform",
        "rate": 0.2,
        "apply_to": "offspring",
        "parameters": {
            "min_depth": 0,
            "max_depth": 2,
            "max_retries": 10,
            "max_tree_depth": 17
        }
    },
    "replacement": {
        "method": "elitist",
        "parameters": {
            "elite_size": 10
        }
    },
    "reproduction": {
        "method": "standard",
        "rate": 0.05
    },
    "fitness": {
        "evaluator": "tvt",
        "function": "sharpe_ratio",
        "parameters": {}
    },
    "termination": {
        "early_stopping": true,
        "parameters": {
            "patience": 5,
            "min_delta": 0.001
        }
    },
    "niching": {
        "enabled": false
    },
    "logging": {
        "records_dir": "/Volumes/X9 Pro/gp_quant_experiments/tvt_large_scale",
        "save_populations": true,
        "save_genealogy": true,
        "save_format": "json",
        "log_level": "INFO"
    }
}