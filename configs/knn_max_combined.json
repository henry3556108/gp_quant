{
  "experiment": {
    "name": "Max Distance - Combined",
    "description": "Maximum distance mating using fitness + tree kernel + signal overlap distance (exploration_prob=1.0)"
  },
  "data": {
    "tickers_dir": "history",
    "mode": "portfolio",
    "train_data_start": "2005-01-01",
    "train_backtest_start": "2006-06-25",
    "train_backtest_end": "2019-12-31",
    "test_data_start": "2021-01-01",
    "test_backtest_start": "2021-07-01",
    "test_backtest_end": "2024-12-31"
  },
  "evolution": {
    "generations": 25,
    "population_size": 500,
    "initial_depth": 6,
    "maximum_depth": 17,
    "max_processors": 7
  },
  "operation_mode": "serial",
  "initialization": {
    "method": "ramped_half_and_half",
    "parameters": {
      "min_depth": 2,
      "max_depth": 6
    }
  },
  "selection": {
    "method": "tournament",
    "parameters": {
      "tournament_size": 3
    }
  },
  "crossover": {
    "strategy": "knn_niching",
    "rate": 0.75,
    "parameters": {
      "neighborhood_ratio": 0.001,
      "exploration_prob": 1,
      "distance_mode": "combined",
      "lambda_decay": 0.5,
      "save_distance_matrix": false,
      "terminal_prob": 0.1,
      "max_retries": 10,
      "max_depth": 17
    }
  },
  "mutation": {
    "strategy": "uniform",
    "rate": 0.2,
    "apply_to": "offspring",
    "parameters": {
      "min_depth": 0,
      "max_depth": 2,
      "max_retries": 10,
      "max_tree_depth": 17
    }
  },
  "replacement": {
    "method": "elitist",
    "parameters": {
      "elite_size": 10
    }
  },
  "reproduction": {
    "method": "standard",
    "rate": 0.05
  },
  "fitness": {
    "evaluator": "rolling_window",
    "function": "sharpe_ratio",
    "parameters": {
      "window_days": 730,
      "step_days": 365,
      "warmup_days": 250,
      "aggregation": "soft_min",
      "soft_min_alpha": 1,
      "no_trade_penalty": -10
    }
  },
  "termination": {
    "early_stopping": true,
    "parameters": {
      "patience": 5,
      "min_delta": 0.001
    }
  },
  "logging": {
    "records_dir": "/Volumes/X9 Pro/gp_quant_experiments/max_distance_study",
    "save_populations": true,
    "save_genealogy": true,
    "save_format": "json",
    "log_level": "INFO"
  }
}
