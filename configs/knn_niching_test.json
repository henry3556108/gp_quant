{
  "experiment": {
    "name": "KNN Niching Crossover Test",
    "description": "Small-scale test of KNNNichingCrossoverStrategy (pop=100, gen=5)"
  },
  "data": {
    "mode": "portfolio",
    "tickers_dir": "history",
    "train_data_start": "2015-01-01",
    "train_backtest_start": "2016-01-01", 
    "train_backtest_end": "2019-12-31",
    "test_data_start": "2019-01-01",
    "test_backtest_start": "2020-01-01",
    "test_backtest_end": "2021-12-31"
  },
  "evolution": {
    "population_size": 100,
    "generations": 5,
    "initial_depth": 6,
    "maximum_depth": 10,
    "max_processors": 4
  },
  "initialization": {
    "method": "ramped_half_and_half",
    "parameters": {
      "min_depth": 2,
      "max_depth": 6
    }
  },
  "selection": {
    "method": "tournament",
    "parameters": {
      "tournament_size": 3
    }
  },
  "crossover": {
    "strategy": "knn_niching",
    "rate": 0.75,
    "parameters": {
      "neighborhood_ratio": 0.2,
      "exploration_prob": 0.7,
      "distance_mode": "fitness_tree_kernel",
      "lambda_decay": 0.5,
      "terminal_prob": 0.1,
      "max_retries": 10,
      "max_depth": 10
    }
  },
  "mutation": {
    "rate": 0.2,
    "strategy": "uniform",
    "apply_to": "offspring",
    "parameters": {}
  },
  "replacement": {
    "method": "elitist",
    "parameters": {
      "elite_size": 5
    }
  },
  "reproduction": {
    "method": "standard",
    "rate": 0.05
  },
  "fitness": {
    "function": "sharpe_ratio",
    "evaluator": "rsfgp",
    "parameters": {
      "n_segments": 3,
      "aggregation_method": "soft_min",
      "soft_min_temperature": 0.5
    }
  },
  "termination": {
    "early_stopping": false
  },
  "logging": {
    "records_dir": "test_knn_niching",
    "save_populations": false,
    "save_genealogy": false
  }
}
