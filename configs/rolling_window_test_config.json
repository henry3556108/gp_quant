{
    "experiment": {
        "name": "Rolling Window Test",
        "description": "Small scale test for Rolling Window Fitness Evaluator"
    },
    "data": {
        "tickers_dir": "history",
        "mode": "portfolio",
        "train_data_start": "2005-01-01",
        "train_backtest_start": "2008-06-25",
        "train_backtest_end": "2019-12-31",
        "test_data_start": "2019-06-01",
        "test_backtest_start": "2020-06-30",
        "test_backtest_end": "2024-12-30"
    },
    "evolution": {
        "generations": 10,
        "population_size": 500,
        "initial_depth": 6,
        "maximum_depth": 17,
        "max_processors": 2
    },
    "operation_mode": "serial",
    "initialization": {
        "method": "ramped_half_and_half",
        "parameters": {
            "min_depth": 2,
            "max_depth": 6
        }
    },
    "selection": {
        "method": "tournament",
        "parameters": {
            "tournament_size": 3
        }
    },
    "crossover": {
        "strategy": "one_point_leaf_biased",
        "rate": 0.75,
        "parameters": {
            "terminal_prob": 0.1,
            "max_retries": 10,
            "max_depth": 17
        }
    },
    "mutation": {
        "strategy": "uniform",
        "rate": 0.2,
        "apply_to": "offspring",
        "parameters": {
            "min_depth": 0,
            "max_depth": 2,
            "max_retries": 10,
            "max_tree_depth": 17
        }
    },
    "replacement": {
        "method": "elitist",
        "parameters": {
            "elite_size": 3
        }
    },
    "reproduction": {
        "method": "standard",
        "rate": 0.05
    },
    "fitness": {
        "evaluator": "rolling_window",
        "function": "sterling_ratio",
        "parameters": {
            "window_days": 730,
            "step_days": 365,
            "warmup_days": 250,
            "aggregation": "mean"
        }
    },
    "termination": {
        "early_stopping": true,
        "parameters": {
            "patience": 5,
            "min_delta": 0.001
        }
    },
    "niching": {
        "enabled": false
    },
    "logging": {
        "records_dir": "/Volumes/X9 Pro/gp_quant_experiments/rolling_window_sterling_ratio",
        "save_populations": true,
        "save_genealogy": false,
        "save_format": "json",
        "log_level": "INFO"
    }
}